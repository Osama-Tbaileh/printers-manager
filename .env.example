# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Copy this file to .env and customize for your setup
# Usage: cp .env.example .env

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Server Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server host (0.0.0.0 = accessible from all network interfaces)
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=3006

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# File Upload Settings (Optional - defaults work for most cases)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Upload folder path (relative or absolute)
UPLOAD_FOLDER=uploads

# Allowed file extensions (comma-separated, no spaces)
ALLOWED_EXTENSIONS=png,jpg,jpeg,bmp

# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=20

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Printer Settings (Optional - defaults are for 80mm thermal printers)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Default maximum width for images in pixels (576 = 80mm printer)
MAX_WIDTH_DEFAULT=576

# Path to image converter script (leave empty for auto-detect)
PRINT_SCRIPT=